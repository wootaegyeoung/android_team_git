<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:visibility="visible"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_gis_result_items_count">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="글쓰기"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="378dp"
            android:text="상금정보"
            android:textColor="@color/black"
            android:textSize="50px" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="302dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/conner"
            android:text="완료"
            android:textColor="@color/black"
            android:textSize="50px" />

        <EditText
            android:id="@+id/write_title"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="86dp"
            android:hint="제목" />

        <EditText
            android:id="@+id/write_content"
            android:layout_width="394dp"
            android:layout_height="159dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="143dp"
            android:background="@drawable/write_conner"
            android:gravity="top"
            android:hint=" 내용을 입력해주세요" />

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="316dp"
            android:background="#00000000"
            android:src="@drawable/camera" />

        <ImageButton
            android:id = "@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="317dp"
            android:background="#00000000"
            android:src="@drawable/time" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="644dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="370dp"
        android:background="@drawable/edge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:text="총상금"
            android:textColor="@color/black"
            android:textSize="45px" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="82dp"
            android:src="@drawable/rank1" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/rank2" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/rank3" />

        <EditText
            android:id = "@+id/total_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="51dp"
            android:background="#D9D9D9"
            android:textAlignment = "center"
            android:layout_marginBottom = "20dp"
            android:textColor="@color/black"
            android:textSize="45px" />

        <EditText
            android:id = "@+id/first_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="85dp"
            android:background="#D9D9D9"
            android:textAlignment = "center"
            android:textColor="@color/black"
            android:textSize="45px" />

        <EditText
            android:id = "@+id/second_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="125dp"
            android:background="#D9D9D9"
            android:textAlignment = "center"
            android:textColor="@color/black"
            android:textSize="45px" />

        <EditText
            android:id = "@+id/third_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="165dp"
            android:background="#D9D9D9"
            android:textAlignment = "center"
            android:textColor="@color/black"
            android:textSize="45px" />


    </RelativeLayout>


    <!--
    Font family: Roboto
    Line height: 82sp
    -->

    <!-- styles.xml -->


</RelativeLayout>
