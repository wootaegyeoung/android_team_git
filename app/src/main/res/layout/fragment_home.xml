<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    tools:context=".home">

    <!--오늘의 인기댓글-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundmainui_fire"
        android:orientation="vertical">

        <!--오늘의 인기댓글 상단바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/fire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="어제의 인기댓글"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--1등 댓글-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/rank1_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/rank1" />

            <Button
                android:id="@+id/comment_rank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rank1_image"
                android:background="#00000000"
                android:letterSpacing="0"
                android:text="1등 댓글"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/like_image1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/num_like1"
                android:background="@drawable/like" />

            <TextView
                android:id="@+id/num_like1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="15"
                android:textColor="#FF0000"
                android:textStyle="bold" />

        </RelativeLayout>
        <!--2등 댓글-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/rank2_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/rank2" />

            <Button
                android:id="@+id/comment_rank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rank2_image"
                android:background="#00000000"
                android:letterSpacing="0"
                android:text="2등 댓글"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/like_image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/num_like2"
                android:background="@drawable/like" />

            <TextView
                android:id="@+id/num_like2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="15"
                android:textColor="#FF0000"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--3등 댓글-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/rank3_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/rank3" />

            <Button
                android:id="@+id/comment_rank3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/rank3_image"
                android:background="#00000000"
                android:letterSpacing="0"
                android:text="3등 댓글"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/like_image3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/num_like3"
                android:background="@drawable/like" />

            <TextView
                android:id="@+id/num_like3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="15"
                android:textColor="#FF0000"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

    <!--진행중인 공모전 화면-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/roundmainui_contest"
        android:orientation="vertical">

        <!--진행중인 공모전 상단바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/contest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight = "30dp"
                android:text="진행중인 공모전"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
        <!--진행중인 공모전 사용자정보/사진/글-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--공모전 글이 들어갈 곳-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id = "@+id/layout_contest_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--공모전 글 레이아웃-->
                    <LinearLayout
                        android:id = "@+id/layout_contest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--프사/이름-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--프사-->
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/profile_click"
                                app:civ_border_color="#000000"
                                app:civ_border_overlay="true"
                                app:civ_border_width="1dp" />
                            <!--사용자 닉네임-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:text="사용자 닉네임"
                                android:textColor="#000000"
                                android:textSize="15dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>
                        <!--사진-->
                        <!--글-->
                        <ImageView
                            android:id="@+id/contest_image"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/sample_image" />

                        <TextView
                            android:id="@+id/contest_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:paddingHorizontal="10dp"
                            android:text="@string/sample_text"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/view_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="더보기" />

                        <TextView
                            android:id="@+id/view_less"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="줄이기"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#88000000" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>